@using IdentityServerSample.Models
@model IdentityServerSample.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Claims";
}

<h1>Claims</h1>

<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>Value</th>
            <th>Issuer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>
                <th>@claim.Type</th>
                <td>@claim.Value</td>
                <td>@claim.Issuer</td>
            </tr>
        }
    </tbody>

</table>