@model Standalone.MvcSample.Models.PaymentResultViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Result (Payment)";
}

<h2 class="h4 m2-1 mt-5 text-center">Document signed!</h2>
<div class="card">
    <div class="card-body">
        <dl>
            <dt>Transaction Type</dt>
            <dd>@Model.TransactionType</dd>

            <dt>Recipient</dt>
            <dd>@Model.RecipientName</dd>

            <dt>Name of signee</dt>
            <dd>@Model.Name</dd>

            <dt>Personal identity number</dt>
            <dd>@Model.PersonalIdentityNumber</dd>

            <dt>IP address of signee</dt>
            <dd>@Model.IpAddress</dd>
        </dl>
    </div>
</div>
