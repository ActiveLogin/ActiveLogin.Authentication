@model Standalone.MvcSample.Models.PaymentResultViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Result (Payment)";
}

<h2 class="h4 m2-1 mt-5 text-center">Payment Complete</h2>
<div class="card">
    <div class="card-body">
        <dl>
            <dt>Transaction Type</dt>
            <dd>@Model.TransactionType</dd>

            <dt>Recipient</dt>
            <dd>@Model.RecipientName</dd>

            @if (Model.Amount != null && Model.Currency != null)
            {
                <dt>Amount</dt>
                <dd>@Model.Amount</dd>

                <dt>Currency</dt>
                <dd>@Model.Currency</dd>
            }

            <dt>Name of payer</dt>
            <dd>@Model.Name</dd>

            <dt>Personal identity number</dt>
            <dd>@Model.PersonalIdentityNumber</dd>

            <dt>IP address of payer</dt>
            <dd>@Model.IpAddress</dd>
        </dl>
    </div>
</div>
