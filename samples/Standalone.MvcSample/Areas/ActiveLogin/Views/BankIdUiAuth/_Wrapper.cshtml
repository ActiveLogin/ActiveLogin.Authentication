@using ActiveLogin.Authentication.BankId.AspNetCore
@using Microsoft.Extensions.Localization
@model ActiveLogin.Authentication.BankId.AspNetCore.Areas.ActiveLogin.Models.BankIdUiViewModel
@inject IStringLocalizer<ActiveLoginResources> Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var subHeader = "With custom subheader";
}

<partial name="_Style" />

<div class="activelogin-bankid-ui--wrapper">
    @if (!string.IsNullOrEmpty(Model.LocalizedPageHeader))
    {
        <h3 class="activelogin-bankid-ui--header">@Model.LocalizedPageHeader</h3>
    }
    <div class="h4 mb-3 font-weight-normal">@subHeader</div>

    <partial name="_Status" model="Model" />
</div>

<partial name="_Script" model="Model" />

