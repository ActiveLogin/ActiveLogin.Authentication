@using Microsoft.Extensions.Localization
@model ActiveLogin.Authentication.BankId.AspNetCore.Areas.ActiveLogin.Models.BankIdUiViewModel
@inject IStringLocalizer<ActiveLogin.Authentication.BankId.AspNetCore.BankIdHandler> Localizer

<partial name="_Style" />

<div class="activelogin-bankid-ui--wrapper">
    @if (!string.IsNullOrEmpty(Localizer["SignIn_Header"]))
    {
        <div class="h3 mb-3 font-weight-normal">@Localizer["SignIn_Header"]</div>
    }

    <partial name="_Status" model="Model" />
    <partial name="_Form" model="Model" />
    <partial name="_Script" model="Model" />
</div>
